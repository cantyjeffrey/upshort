!!! 5
%html
  %head
    %title Upshort
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width,initial-scale=1.0'}
    %meta{name: 'description', content: 'Vanity screenshot uploader and shortener' }
    %meta{name: 'author', content: 'cav.is' }
    %link{rel: 'shortcut icon', href: 'favicon.png'}
    %link{rel: 'stylesheet', href: 'css/bootstrap.min.css'}
    %link{rel: 'stylesheet', href: 'css/upshort.css'}
    - if File.exists?("#{settings.app_root}/public/css/custom.css")
      %link{rel: 'stylesheet', href: 'css/custom.css'}
    %script{type: 'text/javascript', src: 'js/jquery.min.js'}
    %script{type: 'text/javascript', src: 'js/upshort.js'}
%html
  %body{class: logged_in? ? 'logged-in' : ''}
    - if logged_in?
      .navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
        .container
          .navbar-header
            %button.navbar-toggle{data: {toggle: 'collapse', target: '.navbar-collapse'}}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{href: '/'}
              UpShort
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li{class: request.path == '/' ? 'active' : ''}
                %a{href: '/'} Shorts
              %li{class: request.path == '/upload' ? 'active' : ''}
                %a{href: '/upload'} Upload File
            %ul.nav.navbar-nav.navbar-right
              %li{class: request.path == '/logout' ? 'active' : ''}
                %a{href: '/logout'} Logout
    .container
      = yield
